program ValorTotalEstoque;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

function CalcularTotal(preco: Currency; quantidade: Integer): Currency;
begin
      Result := (preco * quantidade);
end;

procedure LerDados( var preco: Currency;quantidade: Integer);
begin
  Writeln('Digite o preço: ');
  Readln(preco);

  Writeln('Digite a quantidade:');
  Readln(quantidade);

end;

procedure ExibirResultados(total: Currency; preco: Currency; quantidade: Integer);
begin
   total := CalcularTotal(preco,quantidade);

   Writeln('O total é: ', total)
end;

var
preco: Currency;
quantidade: Integer;
total: Currency;

begin
   LerDados(preco, quantidade);
   ExibirResultados(total,preco,quantidade);

end.
