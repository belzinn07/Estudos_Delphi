program FizzBuzz;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

function ExibirFizzBuzz(numero: Integer): string;
begin
  if (numero mod 3 = 0) and (numero mod 5 = 0) then
    Exit('FizzBuzz');

  if numero mod 3 = 0 then
    Exit('Fizz');

  if numero mod 5 = 0 then
    Exit('Buzz');

  Result := numero.ToString;
end;

procedure LerDados(var numero: Integer);
begin
  Writeln('---O Jogo do "FizzBuzz"---');

  Writeln('Digite um número inteiro: ');
  Readln(numero);
end;

procedure ExibirResultado;
var i: Integer;
begin

  for i := 1 to 100 do
  begin
     ExibirFizzBuzz(i);
  end;

end;


var
numero:Integer;
begin
  try
    LerDados(numero);
    ExibirResultado;

    Readln;
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
