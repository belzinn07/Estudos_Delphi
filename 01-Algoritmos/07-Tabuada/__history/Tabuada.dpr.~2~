program Tabuada;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

procedure TabuadaAdicao(numero, i:Integer);

begin
  Writeln('Resultado da Adição: ');

  Writeln(Format('%d + %d = %d', [numero, i, numero + i]));

end;



procedure TabuadaSubtracao(numero,i:Integer);

begin
  Writeln('Resultado da Subtração: ');

  Writeln(Format('%d - %d = %d', [numero, i, numero - i]));

end;

  procedure TabuadaMultiplicacao(numero, i:Integer);

begin
  Writeln('Resultado da Multiplicação: ');

  Writeln(Format('%d x %d = %d', [numero, i, numero * i]));

end;

procedure TabuadaDivisao(numero, i:Integer);

begin
  Writeln('Resultado da Divisão: ');

  Writeln(Format('%d / %d = %d', [numero, i, numero / i]));

end;

procedure ExibirMenu;
begin

Writeln('======Tabuada Dinâmica=====');
Writeln('---Menu de Opções--');
Writeln('1. Adição');
Writeln('2. Subtração');
Writeln('3. Multiplicação');
Writeln('4. Divisão');
Writeln('5. Sair');
Writeln('--------------------');
Writeln('Escolha uma opção: ');
end;

var
opcao: Integer;
numero: Integer;
i: Integer;

begin
   ExibirMenu;
   Readln(opcao);

   Writeln('Digite um número para calcular: ');
   Readln(numero);

   if opcao in [1..4] then
      for i := 1 to 10 do
       begin


      case opcao of
      1: TabuadaAdicao(numero,i);
      2: TabuadaSubtracao(numero,i);
      3: TabuadaMultiplicacao(numero,i);
      4: TabuadaAdicao(numero,i);

      end;

      Readln;

       end;







end.
