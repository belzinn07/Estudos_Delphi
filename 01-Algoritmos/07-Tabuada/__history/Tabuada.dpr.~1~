program Tabuada;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

procedure TabuadaAdicao(numero:Integer);

var
i:Integer;

begin
  Writeln('Resultado da Adição: ');

  Writeln(Format('%d + %d = %d', [numero, i, numero + i]));

end;



procedure TabuadaSubtracao(numero:Integer);

var
i:Integer;

begin
  Writeln('Resultado da Subtração: ');

  Writeln(Format('%d - %d = %d', [numero, i, numero - i]));

end;

  procedure TabuadaMultiplicacao(numero:Integer);

var
i:Integer;

begin
  Writeln('Resultado da Multiplicação: ');

  Writeln(Format('%d x %d = %d', [numero, i, numero * i]));

end;

procedure TabuadaDivisao(numero:Integer);

var
i:Integer;

begin
  Writeln('Resultado da Divisão: ');

  Writeln(Format('%d / %d = %d', [numero, i, numero / i]));

end;


begin



end.
