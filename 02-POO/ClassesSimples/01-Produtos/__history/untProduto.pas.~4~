unit untProduto;

interface

type
  TProduto = class
  private
    FDescricao: String;
    FPreco: Currency;
  public
    property Descricao: String read FDescricao write FDescricao;
    property Preco: Currency read FPreco write FPreco;

    function ValidarPreco: Boolean;
  end;

implementation

function TProduto.ValidarPreco: Boolean;
begin
  Result := FPreco > 0;
end;

end.

